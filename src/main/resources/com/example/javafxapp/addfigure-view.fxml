<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox fx:id="MainAddFigureBox" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javafxapp.AddfigureView"
             prefWidth="782" prefHeight="560">
    <GridPane maxWidth="800" gridLinesVisible="false" visible="true" fx:id="FigureAdditionForm" GridPane.rowIndex="0">
        <columnConstraints>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="10" maxWidth="10"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="10" maxWidth="10"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="10" maxWidth="10"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="10" maxWidth="10"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="10" maxWidth="10"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="10" maxWidth="10"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
            <ColumnConstraints prefWidth="60" maxWidth="50"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="10"/>
            <RowConstraints percentHeight="2"/>
            <RowConstraints percentHeight="6"/>
            <RowConstraints percentHeight="2"/>
            <RowConstraints percentHeight="6"/>
            <RowConstraints percentHeight="2"/>
            <RowConstraints percentHeight="6"/>
            <RowConstraints percentHeight="2"/>
            <RowConstraints percentHeight="6"/>
            <RowConstraints percentHeight="2"/>
            <RowConstraints percentHeight="6"/>
            <RowConstraints percentHeight="2"/>
            <RowConstraints percentHeight="6"/>
            <RowConstraints percentHeight="20"/>
        </rowConstraints>
        <ComboBox prefWidth="200" GridPane.columnSpan="4" fx:id="ShapeType" GridPane.rowIndex="0"
                  GridPane.columnIndex="1" onAction="#ShapeType_SelectionChanged">
            <items>
            </items>
        </ComboBox>
        <Spinner GridPane.columnSpan="4" disable="true" fx:id="NumberOfVerticesField"
                 GridPane.rowIndex="0" GridPane.columnIndex="6" initialValue="1" >
        </Spinner>
        <Text GridPane.rowIndex="0" GridPane.columnIndex="11">Radius: </Text>
        <TextField GridPane.columnSpan="2" disable="true" fx:id="RadiusField" GridPane.rowIndex="0"
                   GridPane.columnIndex="13">
        </TextField>
        <Button fx:id="AddFigureButton" GridPane.columnSpan="3" disable="true" prefWidth="200"
                GridPane.rowIndex="0" GridPane.columnIndex="16" onAction="#AddShape_Click">
            Добавить фигуру
        </Button>
        <Button prefWidth="200" fx:id="CloseButton" GridPane.columnSpan="3" GridPane.rowIndex="2" GridPane.columnIndex="16" onAction="#CloseWindow">
            Отменить
        </Button>
    </GridPane>
</VBox>
